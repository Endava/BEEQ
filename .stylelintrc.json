{
  "ignoreFiles": ["**/*"],
  "overrides": [
    {
      "files": ["**/*.css"],
      "extends": ["stylelint-config-standard", "stylelint-config-prettier"],
      "rules": {}
    },
    {
      "files": ["**/*.scss"],
      "extends": ["stylelint-config-sass-guidelines", "stylelint-config-prettier"],
      "rules": {}
    }
  ],
  "rules": {
    "max-nesting-depth": 2,
    "selector-class-pattern": null
  }
}
