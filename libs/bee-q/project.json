{
  "name": "bee-q",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "libs/bee-q/src",
  "projectType": "library",
  "tags": [],
  "generators": {
    "@nxext/stencil:component": {
      "style": "scss"
    }
  },
  "targets": {
    "test": {
      "executor": "@nxext/stencil:test",
      "outputs": ["{options.outputPath}"],
      "options": {
        "projectType": "library",
        "tsConfig": "libs/bee-q/tsconfig.lib.json",
        "configPath": "libs/bee-q/stencil.config.ts",
        "outputPath": "dist/bee-q"
      },
      "dependsOn": ["stylelint", "lint"]
    },
    "start": {
      "executor": "nx:run-commands",
      "options": {
        "commands": ["nx run bee-q:start-stencil", "nx run bee-q:start-storybook"],
        "parallel": true
      }
    },
    "start-stencil": {
      "executor": "@nxext/stencil:serve",
      "outputs": ["{options.outputPath}"],
      "options": {
        "projectType": "library",
        "tsConfig": "libs/bee-q/tsconfig.lib.json",
        "configPath": "libs/bee-q/stencil.config.ts",
        "outputPath": "dist/bee-q"
      },
      "dependsOn": ["create-icons-set"]
    },
    "start-storybook": {
      "executor": "@nrwl/storybook:storybook",
      "options": {
        "uiFramework": "@storybook/web-components",
        "port": 9001,
        "config": {
          "configFolder": "libs/bee-q/.storybook"
        }
      },
      "configurations": {
        "ci": {
          "quiet": true
        }
      }
    },
    "build": {
      "dependsOn": ["^build", "create-icons-set"],
      "executor": "@nxext/stencil:build",
      "outputs": ["{options.outputPath}"],
      "options": {
        "projectType": "library",
        "tsConfig": "libs/bee-q/tsconfig.lib.json",
        "configPath": "libs/bee-q/stencil.config.ts",
        "outputPath": "dist/bee-q"
      },
      "configurations": {
        "production": {
          "dev": false,
          "prod": true
        }
      }
    },
    "build-storybook": {
      "executor": "@nrwl/storybook:build",
      "outputs": ["{options.outputPath}"],
      "options": {
        "uiFramework": "@storybook/web-components",
        "outputPath": "dist/storybook/bee-q",
        "config": {
          "configFolder": "libs/bee-q/.storybook"
        },
        "webpackStatsJson": true
      },
      "configurations": {
        "ci": {
          "quiet": true
        }
      }
    },
    "e2e": {
      "executor": "@nxext/stencil:e2e",
      "outputs": ["{options.outputPath}"],
      "options": {
        "projectType": "library",
        "tsConfig": "libs/bee-q/tsconfig.lib.json",
        "configPath": "libs/bee-q/stencil.config.ts",
        "outputPath": "dist/bee-q"
      }
    },
    "lint": {
      "executor": "nx:run-commands",
      "options": {
        "commands": ["nx run bee-q:eslint", "nx run bee-q:stylelint"],
        "parallel": true
      }
    },
    "eslint": {
      "executor": "@nrwl/linter:eslint",
      "outputs": ["{options.outputFile}"],
      "options": {
        "lintFilePatterns": ["libs/bee-q/**/*.{ts,tsx}"]
      }
    },
    "stylelint": {
      "executor": "nx-stylelint:lint",
      "outputs": ["{options.outputFile}"],
      "options": {
        "lintFilePatterns": ["libs/bee-q/**/*.css", "libs/bee-q/**/*.scss"]
      }
    },
    "extract-icons": {
      "executor": "nx:run-commands",
      "outputs": ["libs/bee-q/src/components/icon/svg"],
      "options": {
        "command": "node tools/scripts/icon-library/extract-icons.js"
      }
    },
    "create-icons-set": {
      "executor": "nx:run-commands",
      "outputs": ["libs/bee-q/src/components/icon/helper"],
      "options": {
        "command": "node tools/scripts/icon-library/create-icons-set.js"
      },
      "dependsOn": ["extract-icons"]
    },
    "publish": {
      "executor": "ngx-deploy-npm:deploy",
      "options": {
        "access": "public",
        "buildTarget": "production",
        "tag": "latest"
      }
    },
    "publish-beta": {
      "executor": "ngx-deploy-npm:deploy",
      "options": {
        "access": "public",
        "buildTarget": "production",
        "tag": "beta"
      }
    }
  }
}
