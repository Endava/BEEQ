{
  "extends": "nx/presets/npm.json",
  "$schema": "./node_modules/nx/schemas/nx-schema.json",
  "affected": {
    "defaultBase": "develop"
  },
  "workspaceLayout": {
    "appsDir": "apps",
    "libsDir": "packages",
    "projectNameAndRootFormat": "derived"
  },
  "namedInputs": {
    "default": [
      "{projectRoot}/**/*",
      "{workspaceRoot}/config/**/*",
      "{workspaceRoot}/package.json",
      "{workspaceRoot}/tailwind.config.ts"
    ],
    "production": [
      "default",
      "!{projectRoot}/**/*.spec.ts",
      "!{projectRoot}/tsconfig.spec.json",
      "!{projectRoot}/jest.config.ts",
      "!{projectRoot}/.eslintrc.json"
    ]
  },
  "targetDefaults": {
    "build": {
      "dependsOn": ["^build"],
      "inputs": ["production", "^production"]
    },
    "test": {
      "inputs": ["default", "^default", "{workspaceRoot}/jest.preset.js"]
    },
    "e2e": {
      "dependsOn": ["build"],
      "inputs": ["default", "^production"]
    }
  },
  "tasksRunnerOptions": {
    "default": {
      "runner": "nx-cloud",
      "options": {
        "cacheableOperations": [
          "build",
          "e2e",
          "generate-icons",
          "lint",
          "storybook-build",
          "storybook-build-css",
          "stylelint",
          "test"
        ]
      }
    }
  },
  "generators": {
    "@nx/react": {
      "application": {
        "babel": true
      }
    },
    "@nx/angular:application": {
      "style": "scss",
      "linter": "none",
      "unitTestRunner": "none",
      "e2eTestRunner": "none",
      "prefix": "app",
      "skipTests": true,
      "standaloneConfig": true
    },
    "@nx/angular:library": {
      "linter": "none",
      "unitTestRunner": "none"
    },
    "@nx/angular:component": {
      "style": "scss"
    }
  },
  "pluginsConfig": {
    "@nx/js": {
      "analyzeSourceFiles": true
    }
  }
}
