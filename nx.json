{
  "extends": "nx/presets/npm.json",
  "$schema": "./node_modules/nx/schemas/nx-schema.json",
  "workspaceLayout": {
    "appsDir": "apps",
    "libsDir": "packages"
  },
  "namedInputs": {
    "default": [
      "{projectRoot}/**/*",
      "{workspaceRoot}/config/**/*",
      "{workspaceRoot}/package.json",
      "{workspaceRoot}/tailwind.config.ts"
    ],
    "production": [
      "default",
      "!{projectRoot}/**/*.spec.ts",
      "!{projectRoot}/tsconfig.spec.json",
      "!{projectRoot}/jest.config.ts",
      "!{projectRoot}/.eslintrc.json"
    ]
  },
  "targetDefaults": {
    "build": {
      "dependsOn": ["^build"],
      "inputs": ["production", "^production"],
      "cache": true
    },
    "test": {
      "inputs": ["default", "^default", "{workspaceRoot}/jest.preset.js"],
      "cache": true
    },
    "e2e": {
      "inputs": ["default", "^production"],
      "cache": true
    },
    "icons": {
      "cache": true
    },
    "lint": {
      "cache": true
    },
    "storybook-build": {
      "dependsOn": ["^build"],
      "cache": true
    },
    "storybook-build-css": {
      "cache": true
    },
    "stylelint": {
      "cache": true
    },
    "@nx/eslint:lint": {
      "cache": true,
      "inputs": ["default", "{workspaceRoot}/.eslintrc.json", "{workspaceRoot}/tools/eslint-rules/**/*"]
    }
  },
  "nxCloudAccessToken": "ZTI2Yzg0YzktODZiMi00Yjg2LTlhMmMtYWI3NDhkODkzZjlmfHJlYWQtb25seQ==",
  "generators": {
    "@nx/react": {
      "application": {
        "babel": true
      }
    },
    "@nx/angular:application": {
      "style": "scss",
      "linter": "none",
      "unitTestRunner": "none",
      "e2eTestRunner": "none",
      "prefix": "app",
      "skipTests": true,
      "standaloneConfig": true
    },
    "@nx/angular:library": {
      "linter": "none",
      "unitTestRunner": "none"
    },
    "@nx/angular:component": {
      "style": "scss"
    }
  },
  "pluginsConfig": {
    "@nx/js": {
      "analyzeSourceFiles": true
    }
  }
}
