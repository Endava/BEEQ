{
  "extends": "nx/presets/npm.json",
  "$schema": "./node_modules/nx/schemas/nx-schema.json",
  "affected": {
    "defaultBase": "develop"
  },
  "targetDefaults": {
    "build": {
      "dependsOn": ["^build"]
    },
    "e2e": {
      "dependsOn": ["build"]
    }
  },
  "tasksRunnerOptions": {
    "default": {
      "runner": "nx-cloud",
      "options": {
        "cacheableOperations": [
          "build",
          "e2e",
          "generate-icons",
          "lint",
          "storybook-build",
          "storybook-build-css",
          "stylelint",
          "test"
        ]
      }
    }
  },
  "generators": {
    "@nx/react": {
      "application": {
        "babel": true
      }
    },
    "@nx/angular:application": {
      "style": "scss",
      "linter": "none",
      "unitTestRunner": "none",
      "e2eTestRunner": "none",
      "prefix": "app",
      "skipTests": true,
      "standaloneConfig": true
    },
    "@nx/angular:library": {
      "linter": "none",
      "unitTestRunner": "none"
    },
    "@nx/angular:component": {
      "style": "scss"
    }
  }
}
