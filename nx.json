{
  "extends": "nx/presets/npm.json",
  "$schema": "./node_modules/nx/schemas/nx-schema.json",
  "workspaceLayout": {
    "appsDir": "apps",
    "libsDir": "packages"
  },
  "namedInputs": {
    "default": [
      "{projectRoot}/**/*",
      "{workspaceRoot}/config/**/*",
      "{workspaceRoot}/package.json",
      "{workspaceRoot}/tailwind.config.ts"
    ],
    "production": [
      "default",
      "!{projectRoot}/**/*.spec.ts",
      "!{projectRoot}/tsconfig.spec.json",
      "!{projectRoot}/jest.config.ts",
      "!{projectRoot}/eslint.config.js"
    ]
  },
  "targetDefaults": {
    "prebuild": {
      "cache": true
    },
    "build": {
      "dependsOn": ["^build"],
      "inputs": ["production", "^production"],
      "cache": true
    },
    "test": {
      "inputs": ["default", "^default", "{workspaceRoot}/jest.preset.js"],
      "cache": true
    },
    "e2e": {
      "dependsOn": [{ "target": "build", "projects": "beeq" }],
      "inputs": ["default", "^production"],
      "cache": true
    },
    "cem": {
      "cache": true
    },
    "icons": {
      "cache": true
    },
    "lint": {
      "cache": true
    },
    "prepare-storybook": {
      "cache": true
    },
    "storybook-build": {
      "dependsOn": [
        { "target": "prepare-storybook", "projects": "beeq" },
        { "target": "build", "projects": "beeq" },
        { "target": "storybook-build-css", "projects": "beeq" }
      ],
      "cache": true
    },
    "storybook-build-css": {
      "dependsOn": [{ "target": "build", "projects": "beeq-tailwindcss" }],
      "cache": true
    },
    "stylelint": {
      "cache": true
    },
    "@nx/eslint:lint": {
      "cache": true,
      "inputs": ["default", "{workspaceRoot}/eslint.config.js"]
    }
  },
  "release": {
    "changelog": {
      "workspaceChangelog": {
        "createRelease": "github",
        "renderOptions": {
          "authors": true,
          "mapAuthorsToGitHubUsernames": true,
          "commitReferences": true,
          "versionTitleDate": true
        }
      }
    },
    "conventionalCommits": {
      "types": {
        "feat": { "changelog": { "title": "Features ‚ö°Ô∏è" } },
        "fix": { "changelog": { "title": "Bug Fixes üêû", "semverBump": "patch" } },
        "test": { "changelog": { "title": "Test üß™" }, "semverBump": "patch" },
        "docs": { "changelog": { "title": "Documentation üìö", "semverBump": "patch" } },
        "style": { "changelog": { "title": "Style üé®", "semverBump": "patch" } },
        "chore": { "changelog": { "title": "Chore ‚öôÔ∏è", "semverBump": "patch" } },
        "perf": { "changelog": { "title": "Performance ‚åõÔ∏è", "semverBump": "patch" } },
        "refactor": { "changelog": { "title": "Refactor üõ†Ô∏è", "semverBump": "patch" } },
        "release": false
      }
    },
    "git": {
      "commit": true,
      "commitMessage": "release: {version} [skip ci]",
      "stageChanges": true,
      "tag": true
    },
    "projects": ["packages/*"],
    "releaseTagPattern": "v{version}",
    "version": {
      "conventionalCommits": true,
      "generatorOptions": {
        "versionPrefix": "^"
      }
    }
  },
  "nxCloudAccessToken": "ZTI2Yzg0YzktODZiMi00Yjg2LTlhMmMtYWI3NDhkODkzZjlmfHJlYWQtb25seQ==",
  "generators": {
    "@nx/react": {
      "application": {
        "babel": true
      }
    },
    "@nx/angular:application": {
      "style": "scss",
      "linter": "none",
      "unitTestRunner": "none",
      "e2eTestRunner": "none",
      "prefix": "app",
      "skipTests": true,
      "standaloneConfig": true
    },
    "@nx/angular:library": {
      "linter": "none",
      "unitTestRunner": "none"
    },
    "@nx/angular:component": {
      "style": "scss"
    }
  },
  "pluginsConfig": {
    "@nx/js": {
      "analyzeSourceFiles": true
    }
  }
}
