{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "outDir": "../../dist/out-tsc",
    "types": ["node"],
    "composite": true
  },
  "exclude": ["**/*.spec.ts", "**/*.spec.tsx"],
  "include": [
    "../../config/**/*.ts",
    "../../tailwind.config.ts",
    "**/*.js",
    "**/*.jsx",
    "**/*.mdx",
    "**/*.stories.js",
    "**/*.stories.jsx",
    "**/*.stories.ts",
    "**/*.stories.tsx",
    "**/*.ts",
    "**/*.tsx"
  ]
}
