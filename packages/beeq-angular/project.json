{
  "name": "beeq-angular",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "packages/beeq-angular/src",
  "projectType": "library",
  "tags": ["wrapper", "angular", "publishable"],
  "prefix": "beeq",
  "implicitDependencies": ["beeq"],
  "targets": {
    "build": {
      "executor": "@nx/angular:package",
      "outputs": ["{workspaceRoot}/dist/beeq-angular"],
      "options": {
        "project": "packages/beeq-angular/ng-package.json"
      },
      "configurations": {
        "production": {
          "tsConfig": "packages/beeq-angular/tsconfig.lib.prod.json"
        },
        "development": {
          "tsConfig": "packages/beeq-angular/tsconfig.lib.json"
        }
      },
      "defaultConfiguration": "production"
    },
    "lint": {
      "executor": "@nx/eslint:lint",
      "options": {
        "lintFilePatterns": ["{projectRoot}/**/*.ts", "{projectRoot}/package.json", "{projectRoot}/project.json"]
      }
    },
    "publish": {
      "executor": "ngx-deploy-npm:deploy",
      "options": {
        "access": "public",
        "noBuild": true,
        "tag": "latest"
      }
    },
    "publish-beta": {
      "executor": "ngx-deploy-npm:deploy",
      "options": {
        "access": "public",
        "tag": "beta"
      }
    }
  }
}
