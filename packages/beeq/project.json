{
  "name": "beeq",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "packages/beeq/src",
  "projectType": "library",
  "tags": ["components", "core", "publishable"],
  "generators": {
    "@nxext/stencil:component": {
      "style": "scss"
    }
  },
  "namedInputs": {
    "production": [
      "default",
      "!{projectRoot}/**/*.mdx",
      "!{projectRoot}/**/*.e2e.ts",
      "!{projectRoot}/**/*.spec.ts",
      "!{projectRoot}/**/*.stories.tsx",
      "!{projectRoot}/tsconfig.spec.json",
      "!{projectRoot}/jest.config.ts",
      "!{projectRoot}/.eslintrc.json"
    ]
  },
  "targets": {
    "start": {
      "executor": "nx:run-commands",
      "options": {
        "commands": [
          "nx run beeq:stencil-start --noOpen",
          "nx run beeq:storybook-start-css",
          "nx run beeq:storybook-start"
        ],
        "parallel": true
      }
    },
    "stencil-start": {
      "executor": "@nxext/stencil:serve",
      "outputs": ["{options.outputPath}"],
      "options": {
        "projectType": "library",
        "tsConfig": "packages/beeq/tsconfig.lib.json",
        "configPath": "packages/beeq/stencil.config.ts",
        "outputPath": "dist/beeq",
        "watch": true,
        "dev": false
      }
    },
    "storybook-start": {
      "executor": "@nx/storybook:storybook",
      "options": {
        "loglevel": "silly",
        "configDir": "packages/beeq/.storybook",
        "host": "127.0.0.1",
        "port": 9001,
        "open": true
      },
      "configurations": {
        "ci": {
          "quiet": true
        }
      }
    },
    "build": {
      "dependsOn": ["icons"],
      "executor": "@nxext/stencil:build",
      "outputs": ["{options.outputPath}", "{projectRoot}/custom-elements.json"],
      "options": {
        "projectType": "library",
        "tsConfig": "packages/beeq/tsconfig.lib.json",
        "configPath": "packages/beeq/stencil.config.ts",
        "outputPath": "dist/beeq",
        "ci": true
      },
      "configurations": {
        "production": {
          "dev": false,
          "prod": true
        }
      }
    },
    "storybook-build": {
      "dependsOn": ["storybook-build-css"],
      "executor": "@nx/storybook:build",
      "outputs": ["{options.outputDir}", "{options.config.configDir}"],
      "options": {
        "outputDir": "dist/storybook/beeq",
        "configDir": "packages/beeq/.storybook",
        "ci": true
      },
      "configurations": {
        "ci": {
          "quiet": true
        }
      }
    },
    "storybook-start-css": {
      "executor": "nx:run-commands",
      "outputs": ["{projectRoot}/.storybook/assets/css"],
      "options": {
        "command": "npx tailwindcss -i packages/beeq/src/global/styles/default.scss -o packages/beeq/.storybook/assets/css/stories.css --postcss ./postcss.config.js --watch"
      }
    },
    "storybook-build-css": {
      "executor": "nx:run-commands",
      "outputs": ["{projectRoot}/.storybook/assets/css"],
      "options": {
        "command": "npx tailwindcss -i packages/beeq/src/global/styles/default.scss -o packages/beeq/.storybook/assets/css/stories.css --postcss ./postcss.config.js --minify"
      }
    },
    "icons": {
      "executor": "@bee-q/tools:icons",
      "outputs": ["{options.downloadPath}", "{options.extractToPath}", "{options.outputDir}"],
      "options": {
        "assetsFolder": "assets",
        "downloadPath": "tmp",
        "extractToPath": "packages/beeq/src/components/icon/svg",
        "fileName": "main.zip",
        "helperFile": "icons-set.ts",
        "outputDir": "packages/beeq/src/components/icon/helper",
        "sourceDir": "packages/beeq/src/components/icon/svg/regular",
        "svgFolder": "core-main",
        "sourceUrl": "https://github.com/phosphor-icons/core/archive/refs/heads"
      }
    },
    "test": {
      "dependsOn": ["lint"],
      "executor": "@nxext/stencil:test",
      "outputs": ["{options.outputPath}"],
      "options": {
        "projectType": "library",
        "tsConfig": "packages/beeq/tsconfig.lib.json",
        "configPath": "packages/beeq/stencil.config.ts",
        "outputPath": "dist/beeq"
      }
    },
    "e2e": {
      "executor": "@nxext/stencil:e2e",
      "outputs": ["{options.outputPath}"],
      "options": {
        "projectType": "library",
        "tsConfig": "packages/beeq/tsconfig.lib.json",
        "configPath": "packages/beeq/stencil.config.ts",
        "outputPath": "dist/beeq",
        "noBuild": true
      }
    },
    "lint": {
      "executor": "nx:run-commands",
      "options": {
        "commands": ["nx run beeq:eslint", "nx run beeq:stylelint"],
        "parallel": true
      }
    },
    "eslint": {
      "executor": "@nx/linter:eslint",
      "outputs": ["{options.outputFile}"],
      "options": {
        "lintFilePatterns": ["packages/beeq/**/*.{ts,tsx}"]
      }
    },
    "stylelint": {
      "executor": "nx-stylelint:lint",
      "outputs": ["{options.outputFile}"],
      "options": {
        "lintFilePatterns": ["packages/beeq/**/*.css", "packages/beeq/**/*.scss"],
        "configFile": "packages/beeq/.stylelintrc.json"
      }
    },
    "prepublish": {
      "executor": "nx:run-commands",
      "outputs": ["{options.outputPath}"],
      "options": {
        "command": "mv dist/beeq/dist/README.md dist/beeq/"
      }
    },
    "publish": {
      "executor": "ngx-deploy-npm:deploy",
      "dependsOn": ["prepublish"],
      "options": {
        "access": "public",
        "noBuild": true,
        "tag": "latest"
      }
    },
    "publish-beta": {
      "executor": "ngx-deploy-npm:deploy",
      "options": {
        "access": "public",
        "buildTarget": "production",
        "tag": "beta"
      }
    }
  }
}
