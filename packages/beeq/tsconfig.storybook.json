{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "composite": true,
    "types": ["node", "mdx"],
    "resolveJsonModule": true
  },
  "include": [
    "../../tailwind.config.ts",
    "./vite.config.mts",
    ".storybook/*.json",
    ".storybook/*.ts",
    "**/*.mdx",
    "**/*.spec.ts",
    "**/*.spec.tsx",
    "**/*.stories.js",
    "**/*.stories.jsx",
    "**/*.stories.ts",
    "**/*.stories.tsx",
    "**/*.ts",
    "**/*.tsx",
    "src/**/*.d.ts"
  ]
}
