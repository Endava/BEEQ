{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "baseUrl": ".",
    "lib": ["dom", "es2019", "es2020", "es2021", "esnext"],
    "target": "es2019",
    "module": "esnext",
    "allowSyntheticDefaultImports": true,
    "allowUnreachableCode": false,
    "declaration": false,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "moduleResolution": "node",
    "skipDefaultLibCheck": true,
    "skipLibCheck": true,
    "sourceMap": true,
    "paths": {
      "@smore/components": ["dist/components"],
      "@smore/components/loader": ["dist/components/loader"]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
