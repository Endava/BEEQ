{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "baseUrl": ".",
    "lib": ["dom", "es2019", "es2020", "es2021", "esnext"],
    "target": "es2019",
    "module": "esnext",
    "allowSyntheticDefaultImports": true,
    "allowUnreachableCode": false,
    "declaration": false,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "moduleResolution": "node",
    "skipDefaultLibCheck": true,
    "skipLibCheck": true,
    "sourceMap": true,
    "paths": {
      "@bee-q/angular": ["dist/beeq-angular"],
      "@bee-q/core": ["dist/beeq"],
      "@bee-q/core/*": ["dist/beeq/*"],
      "@bee-q/icons": ["packages/beeq-icons/src/index.ts"],
      "@bee-q/react": ["dist/beeq-react"]
    }
  },
  "include": ["./config/**/*.ts"],
  "exclude": ["./node_modules", "./tmp"]
}
