{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "baseUrl": ".",
    "lib": ["dom", "esnext"],
    "target": "esnext",
    "module": "esnext",
    "allowSyntheticDefaultImports": true,
    "allowUnreachableCode": false,
    "declaration": false,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "moduleResolution": "node",
    "skipDefaultLibCheck": true,
    "skipLibCheck": true,
    "sourceMap": true,
    "paths": {
      "@beeq/angular": ["dist/beeq-angular"],
      "@beeq/core": ["dist/beeq"],
      "@beeq/core/*": ["dist/beeq/*"],
      "@beeq/react": ["dist/beeq-react"],
      "@beeq/tailwindcss": ["dist/beeq-tailwindcss"],
      "@beeq/tools": ["tools/src/index.ts"],
      "@beeq/vue": ["dist/beeq-vue"]
    }
  },
  "exclude": ["./node_modules", "./tmp"]
}
