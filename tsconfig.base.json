{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "baseUrl": ".",
    "lib": ["dom", "es2019", "es2020", "es2021", "esnext"],
    "target": "es2019",
    "module": "esnext",
    "allowSyntheticDefaultImports": true,
    "allowUnreachableCode": false,
    "declaration": false,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "moduleResolution": "node",
    "skipDefaultLibCheck": true,
    "skipLibCheck": true,
    "sourceMap": true,
    "paths": {
      "@bee-q/angular": ["packages/bee-q-angular/src/index.ts"],
      "@bee-q/core": ["dist/bee-q"],
      "@bee-q/core/*": ["dist/bee-q/*"],
      "@bee-q/icons": ["packages/bee-q-icons/src/index.ts"],
      "@bee-q/react": ["packages/bee-q-react/src/index.ts"]
    }
  },
  "exclude": ["node_modules", "tmp"],
  "references": [
    {
      "path": "./.storybook/tsconfig.json"
    }
  ]
}
