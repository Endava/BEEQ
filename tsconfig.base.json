{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "baseUrl": ".",
    "lib": ["dom", "es2019", "es2020", "es2021", "esnext"],
    "target": "es2019",
    "module": "esnext",
    "allowSyntheticDefaultImports": true,
    "allowUnreachableCode": false,
    "declaration": false,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "moduleResolution": "node",
    "skipDefaultLibCheck": true,
    "skipLibCheck": true,
    "sourceMap": true,
    "paths": {
      "@bee-q/angular": ["libs/bee-q-angular/src/index.ts"],
      "@bee-q/core": ["dist/bee-q"],
      "@bee-q/core/*": ["dist/bee-q/*"],
      "@bee-q/react": ["dist/bee-q-react/dist"]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
